@{
    Layout = null;
}
<h1>@ViewData["Title"]</h1>

<head>
    <title>youtility register</title>
    <meta charset="utf-8">
    <link rel="icon" href="~\images\youtility_emblem.png" />
    <link rel="stylesheet" href="~/css/Home/site.css" />
</head>

<form action="action_page.php" method="post">
    <div class="container">
        <label for="new_uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="uname" required>

        <label for="new_psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Secure Password" name="psw" required>

        <label for="new_zip_code"><b>Zip Code</b></label>
        <input type="text" placeholder="Enter Username" name="uname" required>

        <label for="new_email"><b>Email Address</b></label>
        <input type="text" placeholder="Enter Username" name="uname" required>

        <button type="submit">Register</button>
        <label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>
    </div>

    <div class="container" style="background-color:#f1f1f1">
        <button type="button" class="cancelbtn">Cancel</button>
    </div>
</form>